<!doctype html>
<html lang="en">

@Html.Action("PartialHead","Portfolio")

<body>
    <!-- header -->
    @Html.Action("PartialNavbar", "Portfolio")
    <!-- contact breadcrumb -->
    @Html.Action("PartialContact", "Portfolio")
    <!-- contact breadcrumb -->
    <!-- contact block -->
    <!-- contact1 -->
    <section class="w3l-contact-1 py-5">
        <div class="contacts-9 py-lg-5 py-md-4">
            <div class="container">
                <div class="d-grid contact-view">
                    @Html.Action("MyContactInfo", "Contact")
                    <div class="map-content-9">
                        <form method="post">
                            <div class="twice-two">
                                <input type="text" class="form-control" name="NameSurname" id="w3lName" placeholder="Adınız-Soyadınız"
                                       required="">
                                <input type="email" class="form-control" name="SenderMail" id="w3lSender" placeholder="Mail Adresi"
                                       required="">
                            </div>
                            <div class="twice">
                                <input type="text" class="form-control" name="MessageSubject" id="w3lSubject"
                                       placeholder="Konu" required="">
                            </div>
                            <textarea name="Content" class="form-control" id="w3lMessage" placeholder="Mesajınız"
                                      required=""></textarea>
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary btn-style mt-4">Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- /contact1 -->
    <div class="map-iframe">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3055.006285420596!2d32.89349218501908!3d40.03063909803021!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40820811c2a82bc7%3A0xfddf65723d2b3b0f!2zw4dhc2dlbQ!5e0!3m2!1str!2str!4v1689066458812!5m2!1str!2str" width="1510" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <!-- //contact block -->
    <!-- Footer -->
    @Html.Action("PartialFooter", "Portfolio")
    <!-- //Footer -->
    <!-- all js scripts and files here -->
    <!-- theme switch js (light and dark)-->
    @Html.Action("PartialScript", "Portfolio")
</body>

</html>